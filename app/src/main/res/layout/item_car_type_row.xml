<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="5dp"
    android:orientation="vertical"
    android:background="@drawable/card_radius_corner">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_head"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtCarType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Toyota Crysta"
            android:textStyle="bold"
            android:textColor="#2176E3"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgCarImage"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:src="@drawable/toyota_crysta"
                android:layout_marginLeft="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/imgCheck1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/check"
                        android:layout_gravity="center"/>

                    <TextView
                        android:id="@+id/txtStartsPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="Starts Price"
                        android:textSize="11sp"
                        android:textColor="@color/black"
                        android:paddingLeft="5dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_toRightOf="@id/imgCheck1"/>

                    <TextView
                        android:id="@+id/txtStartPriceValue"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="Rs. 2600"
                        android:textSize="11sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:paddingLeft="40dp"
                        android:layout_alignParentRight="true"
                        android:paddingRight="40dp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/imgCheck2"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/check"
                        android:layout_gravity="center"/>

                    <TextView
                        android:id="@+id/txtAge"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="Age"
                        android:textSize="11sp"
                        android:textColor="@color/black"
                        android:paddingLeft="5dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_toRightOf="@id/imgCheck2"/>

                    <TextView
                        android:id="@+id/txtAgeValue"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="0-3"
                        android:textSize="11sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:paddingLeft="40dp"
                        android:layout_alignParentRight="true"
                        android:paddingRight="40dp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/imgCheck3"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/check"
                        android:layout_gravity="center"/>

                    <TextView
                        android:id="@+id/txtCapacity"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="Capacity"
                        android:textSize="11sp"
                        android:textColor="@color/black"
                        android:paddingLeft="5dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_toRightOf="@id/imgCheck3"/>

                    <TextView
                        android:id="@+id/txtCapacityValue"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="06"
                        android:textSize="11sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:paddingLeft="40dp"
                        android:layout_alignParentRight="true"
                        android:paddingRight="40dp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/imgCheck4"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/check"
                        android:layout_gravity="center"/>

                    <TextView
                        android:id="@+id/txtAvailable"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_toRightOf="@id/imgCheck4"
                        android:gravity="center"
                        android:paddingLeft="5dp"
                        android:text="Available"
                        android:textColor="@color/black"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/txtAvailableValue"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="08"
                        android:textSize="11sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:paddingLeft="40dp"
                        android:layout_alignParentRight="true"
                        android:paddingRight="40dp"/>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtDesc"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="Included - Toll &amp; Taxes, Night Charges, Driver Allowances, Parking"
                android:textSize="10sp"
                android:textColor="#2176E3"
                android:textStyle="bold"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:layout_gravity="center"/>

            <ImageView
                android:id="@+id/imgMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/more"
                android:paddingLeft="20dp"/>

        </LinearLayout>

    </LinearLayout>

z




</LinearLayout>